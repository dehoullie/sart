<% return if videos.blank? %>
<div class="container mb-5">
  <h4 class="fw-bold mb-3">Trailers & Clips</h4>
  <div class="trailers-gallery d-flex flex-row overflow-auto gap-3 pb-2">
    <% videos.each do |vid| %>
      <div class="card h-100 border-0 shadow-sm" style="min-width: 340px; max-width: 400px;">
        <div class="ratio ratio-16x9">
          <iframe
            src="https://www.youtube.com/embed/<%= vid['key'] %>?rel=0"
            title="<%= vid['name'] %>"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
        <div class="card-body py-2 px-2 text-center">
          <h6 class="card-title mb-1 text-truncate"><%= vid['name'] %></h6>
        </div>
      </div>
    <% end %>
  </div>
</div>
