  <div class="container-fluid p-0 bg-white">
    <div class="d-flex justify-content-between align-items-center px-3 pt-3">
      <h5>Categories</h5>
      <button class="btn btn-sm btn-outline-secondary">See more</button>
    </div>
    <div class="d-flex overflow-auto px-3 py-2">
      <% # Example: 6 categories. Replace with real @genres in a real app. %>
      <% ["Action", "Comedy", "Drama", "Sci-Fi", "Horror", "Adventure"].each_with_index do |name, i| %>
        <div class="card text-center me-3" style="min-width: 8rem; max-width: 8rem; height: 6rem;">
          <div class="card-body d-flex align-items-center justify-content-center px-2">
            <%= link_to name, "#", class: "stretched-link text-decoration-none text-dark fw-bold" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- ========== “Recent Movies” Section (Future) ========== -->
  <div class="container-fluid p-0 bg-white">
    <h5 class="px-3 pt-3">Recent movies</h5>
    <div class="d-flex overflow-auto px-3 pb-3">
      <% 1.upto(6) do |i| %>
        <div class="card me-3 shadow-sm" style="min-width: 8rem; max-width: 8rem;">
          <img
            src="https://placehold.co/200x300?text=Recent+<%= i %>"
            class="card-img-top"
            alt="Recent Movie <%= i %>"
          >
        </div>
      <% end %>
    </div>
  </div>

